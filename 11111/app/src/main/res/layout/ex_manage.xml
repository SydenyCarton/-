<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumOfDangerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e4f2eb"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imgReturn"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:text="TextView"
                android:textColor="#e2a617"
                android:textSize="24sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/empty_block"
        android:showDividers="middle"
        android:layout_weight="1"
        android:background="@drawable/background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="对象：已有早期并发症；自我管理能力差；血糖控制情况差；其它特殊情况（如妊娠、围手术期、Ⅰ型糖尿病包括成人迟发性自身免疫性糖尿病）；治疗上有积极要求的；相对年轻，病程短。"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="随访每年至少10次。"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="随访内容:"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="血糖检测（包括患者自检）：至少每周至少2天测量血糖，其中至少测量1次空腹血糖和1次餐后2小时血糖；希望达到每天测量空腹血糖和早中晚3餐餐后血糖。"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="糖化血红蛋白检测：每3个月1次。。"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="血压检测：伴高血压的患者至少每周1次。不伴高血压的患者，每年至少1次。"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="血脂检测、视网膜检查、尿微量白蛋白检测、心电图检查、神经病变检查、足部检查:每年至少2次。。"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#e4f2eb"
            android:gravity="center_vertical"
            android:stretchColumns="0,1,2,3">

            <TableRow>

                <TextView
                    android:id="@+id/backHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="首页" />

                <TextView
                    android:id="@+id/base1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="基础评估" />
                <TextView
                    android:id="@+id/yuhou1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="预后评估" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>