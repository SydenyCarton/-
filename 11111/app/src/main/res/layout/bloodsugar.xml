<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText

        android:id="@+id/sugareditText1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="edtBMP"
        app:layout_constraintBottom_toTopOf="@+id/sugareditText2"
        app:layout_constraintEnd_toEndOf="@+id/sugareditText2"
        app:layout_constraintStart_toStartOf="@+id/sugareditText2" />

    <EditText

        android:id="@+id/sugareditText2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:hint="edtATH"
        app:layout_constraintBottom_toTopOf="@+id/sugarresult1"
        app:layout_constraintEnd_toEndOf="@+id/sugarresult1"
        app:layout_constraintStart_toStartOf="@+id/sugarresult1" />

    <TextView
        android:id="@+id/sugarresult1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/suagribtn1"
        app:layout_constraintEnd_toEndOf="@+id/suagribtn1"
        app:layout_constraintStart_toStartOf="@+id/suagribtn1" />

    <Button
        android:id="@+id/suagribtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="248dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/view4" />

    <View
        android:id="@+id/view4"
        android:layout_width="408dp"
        android:layout_height="601dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgReturn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:srcCompat="@android:color/holo_red_dark" />

    <ImageView
        android:id="@+id/backHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4" />
</android.support.constraint.ConstraintLayout>